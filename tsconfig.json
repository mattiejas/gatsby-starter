{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "jsxFactory": "jsx"
  }
}
